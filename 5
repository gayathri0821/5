package ex_siva;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Ex5 {

	public static void main(String[] args) {
		//handle exceptions using try catch block
		try
		{
			//prompt the user from input stream
		System.out.println("enter number");
		//read input from keyboard
        Scanner sc=new Scanner(System.in);
        String n=sc.nextLine();
        //convert string to int using parseInt() method
        int a=Integer.parseInt(n);
        int s=0;
        //using if block
        if(n.length()>4 || n.length()<4)
        {
        	System.out.println("please enter 4 digit");
        }
        else{
        
        	//using while loop
         while(a!=0)
        {
        	s+=a%10;
        	a=a/10;

        }
        }
         System.out.println("sum of 4 digits is:"+s);
		}
		catch(InputMismatchException ie)
		{
			System.out.println("please enter valid input");
		}
       

	}

}


